<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/list_item_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
	<LinearLayout 
	    android:orientation="horizontal"
	    android:background="@drawable/list_item_background"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/text_l1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.33"
	        android:background="@drawable/list_item_background"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:padding="@dimen/space_5"
	        android:text="@string/gprs_1"
	        android:textColor="#666" />
	    
	    <View 
	        android:layout_width="1.5dip"
	        android:layout_height="fill_parent"
	        android:background="@color/ui_dialog_divider"/>
	
	    <TextView
	        android:id="@+id/text_l2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.76"
	        android:background="@drawable/list_item_background"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:padding="@dimen/space_5"
	        android:text="@string/gprs_2"
	        android:textColor="#666" />
	    
	     <View 
	        android:layout_width="1.5dip"
	        android:layout_height="fill_parent"
	        android:background="@color/ui_dialog_divider"/>
	
	    <TextView
	        android:id="@+id/text_l3"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.38"
	        android:background="@drawable/list_item_background"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:padding="@dimen/space_5"
	        android:text="@string/gprs_3"
	        android:textColor="#666" />
	    
	    <View 
	        android:layout_width="1.5dip"
	        android:layout_height="fill_parent"
	        android:background="@color/ui_dialog_divider"/>
	
	    <TextView
	        android:id="@+id/text_l4"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/gprs_4"
	        android:background="@drawable/list_item_background"
		        android:padding="@dimen/space_5"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        android:textColor="#666"/>
	</LinearLayout>
	<View 
	        android:layout_width="fill_parent"
	        android:layout_height="1.5dip"
	        android:background="@color/actionbar_background"/>
</LinearLayout>